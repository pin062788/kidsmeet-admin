<!DOCTYPE html>
<html>
<head>
  <title>AppAdmin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<p class="navbar-text pull-right">
  <% if agent_signed_in? %>
      Logged in as <strong><%= current_agent.email %></strong>.
      <%= link_to 'Edit profile', edit_agent_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_agent_session_path, method: :delete, :class => 'navbar-link'  %>
  <% else %>
      <%= link_to "Sign up", new_agent_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_agent_session_path, :class => 'navbar-link'  %>
  <% end %>


<%= yield %>

<script type="text/javascript">
    $(document).ready(function() {
        if ($('textarea.ckeditor').length > 0) {
            var data = $('textarea.ckeditor');
            $.each(data, function(i) {
                CKEDITOR.replace(data[i].id);
            });
        }
    });
</script>
</body>
</html>
