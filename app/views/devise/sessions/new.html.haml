.signed-out
  .form-signed-out
    %h2.form-signed-out-heading
      Please sign in
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = devise_error_messages!
      = f.label 'Email Address', :class => 'sr-only'
      = f.email_field :email, :class => 'form-control', :placeholder => 'Email Address'
      = f.label 'Password', :class => 'sr-only'
      = f.password_field :password,  :class => 'form-control', :placeholder => 'Password'
      .checkbox
        %label
          %input{:type => 'checkbox'}
          Remember Me
      %button{:type => "submit", :value => "Login", :class => 'btn btn-lg btn-primary btn-block'}
        Sign in
      %p.notification
        Forgot your password? #{link_to "Reset it", new_password_path(resource_name)}.
        New to We've? #{link_to "Sign up now", new_registration_path(resource_name)}.