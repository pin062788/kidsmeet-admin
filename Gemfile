group :development do
  gem 'annotate'
end

group :development, :test do
  gem 'byebug'
  gem 'simplecov'
  gem 'rspec-rails'
  gem 'rspec-its'
  gem 'factory_girl_rails'
  gem 'ffaker'
end

group :test do
  gem 'database_rewinder'
  gem 'turnip'
  gem 'capybara'
  gem 'capybara-screenshot'
  gem 'poltergeist'
