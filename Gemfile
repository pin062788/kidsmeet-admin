source 'https://rubygems.org'

# core
gem 'rails', '4.1.6'
gem 'mysql2'

# presentation
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'bootstrap-sass'
gem 'bootstrap-sass-extras'
gem 'bootstrap-datepicker-rails'
gem 'slim-rails'
gem 'haml-rails'
gem 'simple_form'

# application
gem 'rails_admin'
gem 'devise'
gem 'cancancan'
gem 'ckeditor'
gem 'paperclip','3.4.2'

# Upload image to qiniu storage service
gem 'paperclip-qiniu'

# Adding watermark into photos
